# {{ ansible_managed }}
server {
  listen 80;
  server_name status-{{ inventory_dir.split('/')[-1] }}.kartel.com.ru;
  error_log /var/log/nginx/status-{{ inventory_dir.split('/')[-1] }}.kartel.com.ru_error.log;
  access_log /var/log/nginx/status-{{ inventory_dir.split('/')[-1] }}.kartel.com.ru_access.log;
  return 301 https://$server_name$request_uri;
}

server {
  listen 443 ssl;
  server_name status-{{ inventory_dir.split('/')[-1] }}.kartel.com.ru;
  error_log /var/log/nginx/status-{{ inventory_dir.split('/')[-1] }}.kartel.com.ru_error.log;
  access_log /var/log/nginx/status-{{ inventory_dir.split('/')[-1] }}.kartel.com.ru_access.log;
#  add_header Strict-Transport-Security "max-age=63072000; includeSubdomains; preload";
  ssl_certificate /etc/pki/tls/certs/STAR_kartel_com_ru.crt;
  ssl_certificate_key /etc/pki/tls/private/STAR_kartel_com_ru.key;
  ssl_protocols TLSv1 TLSv1.1 TLSv1.2;
  ssl_prefer_server_ciphers on;
  ssl_session_cache shared:SSL:10m;
  ssl_dhparam /etc/pki/tls/certs/dhparam.pem;
  ssl_ciphers EECDH+AESGCM:EDH+AESGCM:ECDHE-RSA-AES128-GCM-SHA256:AES256+EECDH:DHE-RSA-AES128-GCM-SHA256:AES256+EDH:ECDHE-RSA-AES256-GCM-SHA384:DHE-RSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-SHA384:ECDHE-RSA-AES128-SHA256:ECDHE-RSA-AES256-SHA:ECDHE-RSA-AES128-SHA:DHE-RSA-AES256-SHA256:DHE-RSA-AES128-SHA256:DHE-RSA-AES256-SHA:DHE-RSA-AES128-SHA:ECDHE-RSA-DES-CBC3-SHA:EDH-RSA-DES-CBC3-SHA:AES256-GCM-SHA384:AES128-GCM-SHA256:AES256-SHA256:AES128-SHA256:AES256-SHA:AES128-SHA:DES-CBC3-SHA:HIGH:!aNULL:!eNULL:!EXPORT:!DES:!MD5:!PSK:!RC4;

  location = /favicon.ico { log_not_found off; }
  location = /robots.txt { alias /etc/nginx/robots.txt; }

  location / {
      proxy_pass http://localhost:8001;
      proxy_buffering off;
      proxy_http_version 1.1;
      proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
  }
}

